{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ng build",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ng serve",
            "type": "shell",
            "command": "ng serve",
            "isBackground": true,
            "dependsOn": "ng build",
            "problemMatcher": []
        },
        {
            "label": "node build",
            "type": "typescript",
            "tsconfig": "node/tsconfig.node.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "node serve",
            "type": "shell",
            "command": "node ${workspaceFolder}/dist/app.js",
            "isBackground": true,
            "dependsOn": "node build",
            "problemMatcher": [],
            "options": {
                "env": {
                    "PORT": "4200"
                }
            }
        }
    ]
}